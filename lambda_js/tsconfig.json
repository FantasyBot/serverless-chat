{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2015"]
  },
  "exclude": ["node_modules", "coverage"]
}
